{
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "name": "GeoHunt",
  "description": "This extension connects you to the GeoHunt server and give you recommendation about addresses.",
  "version": "1.0.0",

  "browser_action": {
    "default_title": "GeoHunt",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}
